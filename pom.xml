<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>gov.nysenate</groupId>
  <artifactId>legislation</artifactId>
  <packaging>war</packaging>
  <version>2.12</version>

  <!-- NY Senate Maven Repository -->

  <repositories>
    <repository>
      <id>gov.nysenate</id>
      <name>NY Senate Maven Repository</name>
      <url>http://dev.nysenate.gov/maven/repo</url>
    </repository>
  </repositories>

  <build>
    <finalName>${project.artifactId}##${project.version}</finalName>
    <plugins>
      <!-- Compiler Plugin -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <!-- avoid possible encoding issues -->
          <encoding>utf-8</encoding>
        </configuration>
      </plugin>
      <!-- Surefire Plugin -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.20</version>
        <configuration>
          <excludedGroups>gov.nysenate.openleg.annotation.SillyTest</excludedGroups>
          <excludedGroups>gov.nysenate.openleg.annotation.IntegrationTest</excludedGroups>
          <groups>gov.nysenate.openleg.annotation.UnitTest</groups>
        </configuration>
        <executions>
          <execution>
            <id>unit-test</id>
            <goals>
              <goal>test</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!-- Failsafe Plugin -->
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
        <version>2.20</version>
        <configuration>
          <excludedGroups>gov.nysenate.openleg.annotation.SillyTest</excludedGroups>
          <excludedGroups>gov.nysenate.openleg.annotation.UnitTest</excludedGroups>
          <groups>gov.nysenate.openleg.annotation.IntegrationTest</groups>
        </configuration>
        <executions>
          <execution>
            <id>integration-test</id>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!-- JaCoCo plugin -->
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
        <version>0.7.9</version>
        <executions>
          <execution>
            <id>pre-unit-test</id>
            <goals>
              <goal>prepare-agent</goal>
            </goals>
          </execution>
          <execution>
            <id>pre-integration-test</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>prepare-agent-integration</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <properties>
    <c3p0.version>0.9.1.2</c3p0.version>
    <commons-cli.version>1.4</commons-cli.version>
    <commons-io.version>2.5</commons-io.version>
    <commons-lang.version>3.6</commons-lang.version>
    <eh-cache.version>2.10.4</eh-cache.version>
    <elastic-search.version>2.4.1</elastic-search.version>
    <elastic-search-delete-by-query.version>2.4.1</elastic-search-delete-by-query.version>
    <guava.version>22.0</guava.version>
    <guava.jackson.version>2.8.9</guava.jackson.version>
    <http-client.version>4.5.3</http-client.version>
    <jackson.version>2.8.9</jackson.version>
    <jbcrypt.version>0.4</jbcrypt.version>
    <jsoup.version>1.10.3</jsoup.version>
    <jstl.version>1.2</jstl.version>
    <junit.version>4.12</junit.version>
    <pdfbox.version>1.8.13</pdfbox.version>
    <postgres-jdbc.version>9.4.1212</postgres-jdbc.version>
    <shiro.version>1.4.0</shiro.version>
    <slf4j.version>1.7.25</slf4j.version>
    <spring.version>4.3.9.RELEASE</spring.version>
    <tomcat.servlet.version>8.0.44</tomcat.servlet.version>
    <woodstox.version>4.4.1</woodstox.version>
  </properties>

